#!/bin/bash

# db piallation
rm app/data/bricks.objects.set
rm app/data/bricks.objects.shop
rm app/data/bricks.objects.insight

# add sets
curl -H "Content-Type: application/json" -X POST --data '{}' http://localhost:8080/api/v1/set/75105 # millenium falcon;
curl -H "Content-Type: application/json" -X POST --data '{}' http://localhost:8080/api/v1/set/21108 # ghostbuster car
curl -H "Content-Type: application/json" -X POST --data '{}' http://localhost:8080/api/v1/set/21320 # big bang theory

# add shops
curl -H "Content-Type: application/json" -X POST --data "{
    \"name\":\"Toys Center\",
    \"address\":\"Piazzale della Cooperazione, 4, 47122 Forl√¨ FC\"
}" http://localhost:8080/api/v1/shop/

# all insights
curl -H "Content-Type: application/json" -X POST --data "{
    \"shop\":\"toys-center\",
    \"set\":\"75105\",
    \"value\":\"15800\"
}" http://localhost:8080/api/v1/insight/
